{
    "name": "@awa/sdk",
    "version": "1.0.0",
    "description": "TypeScript SDK for Agentic Workflow Architecture (AWA)",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "lint": "eslint src/",
        "test": "vitest",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "awa",
        "agentic",
        "workflow",
        "process",
        "bpmn",
        "ai-agent"
    ],
    "author": "AWA Specification",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/awa-spec/awa-sdk-typescript"
    },
    "dependencies": {
        "zod": "^3.23.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.56.0",
        "tsup": "^8.0.0",
        "typescript": "^5.4.0",
        "vitest": "^1.0.0"
    },
    "peerDependencies": {
        "typescript": ">=5.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}